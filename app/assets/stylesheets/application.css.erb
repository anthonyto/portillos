body {
  background-image: url(<%= asset_path 'background.jpg' %>);
}

@keyframes logo {
    from {
      width: 600px;
      height: 450px;
      transform:rotate(0deg);
    }
    to {
      width: 300px;
      height: 350px;
      transform:rotate(360deg);
    }
}

/* The element to apply the animation to */
#logo {
  position: absolute;
  z-index: -1;
  right: 0;
  opacity: 0.5;
  width: 100px;
  height: 100px;
  animation-name: logo;
  animation-duration: 13s;
  animation-iteration-count: infinite;
  animation-direction: alternate;
}

@keyframes food {
    from {
      width: 250px;
      height: 1000px;
      transform:rotate(0deg);
    }
    to {
      width: 500px;
      height: 125px;
      transform:rotate(360deg);
    }
}

#food {
  position: absolute;
  z-index: -1;
  opacity: 0.7;
  width: 100px;
  height: 100px;
  animation-name: food;
  animation-duration: 7s;
  animation-iteration-count: infinite;
  animation-direction: alternate;
}

@keyframes hotdog {
    from {
      width: 750px;
      height: 1000px;
      transform:rotate(0deg);
    }
    to {
      width: 800px;
      height: 525px;
      transform:rotate(360deg);
    }
}

#hotdog {
  position: absolute;
  z-index: -1;
  opacity: 0.8;
  width: 100px;
  height: 100px;
  animation-name: hotdog;
  animation-duration: 10s;
  animation-iteration-count: infinite;
  animation-direction: alternate;
}